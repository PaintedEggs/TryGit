<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ActionBarWeight"
    android:layout_weight="100"
    android:background="@color/GameActivityBackground">

        <!--
        This liner layout contains:
         - coins image
         - count coins image view
         - plus button
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="30">

            <ImageView
                android:layout_width="@dimen/ActionBarWeight"
                android:layout_height="match_parent"
                android:src="@drawable/monet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:text="10"
                android:textSize="40dp"
                android:layout_gravity="center_vertical"
                android:fontFamily=""
                android:textColor="@color/GameActivityTextColor"
                android:id="@+id/menu_fragment_coins_text_view"/>

            <ImageButton
                android:id="@+id/settings_add_coins"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/plus_button"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <!--
        This liner layout contains action buttons:
         - setting for show/hide all action buttons
         - follow as - following as in social network
         - sound on/off sound in game
         - response for make response in google play
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/settings_follow"
                android:layout_width="@dimen/ActionBarWeight"
                android:layout_height="fill_parent"
                android:src="@drawable/button_social_network"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_gravity="bottom"
                android:layout_marginLeft = "16dp"
                android:layout_marginRight = "16dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/settings_sound"
                android:layout_width="@dimen/ActionBarWeight"
                android:layout_height="fill_parent"
                android:src="@drawable/selector_settings_sound_button"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_gravity="left"
                android:layout_marginLeft = "16dp"
                android:layout_marginRight = "16dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/settings_response"
                android:layout_width="@dimen/ActionBarWeight"
                android:layout_height="fill_parent"
                android:src="@drawable/google_play"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_gravity="left"
                android:layout_marginLeft = "16dp"
                android:layout_marginRight = "16dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/action_settings"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ActionBarWeight"
                android:src="@drawable/selector_settings_main_button"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft = "16dp"
                android:layout_marginRight = "16dp"/>

        </LinearLayout>

