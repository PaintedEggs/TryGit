<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FrontActivityPersonImageView"
        android:src="@drawable/exsampe"/>

    <LinearLayout
        android:id="@+id/tips_layout"
        android:orientation="vertical"
        android:layout_width="@dimen/TipsButtonsWright"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/FrontActivityPersonImageView">
        >


        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TipsButtonsWright"
            android:id="@+id/button_tips_tip1"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:src="@drawable/one_character_tip"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TipsButtonsWright"
            android:id="@+id/button_tips_tip2"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:src="@drawable/facebook_tip"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TipsButtonsWright"
            android:id="@+id/button_tips_tip3"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:src="@drawable/word_tip"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TipsButtonsWright"
            android:text="Tips"
            android:scaleType="fitCenter"
            android:id="@+id/button_tips_all"
            android:src="@drawable/tip_lifebuoy"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Андрій/Google%20Диск/Work/google%20play/TryGit/TryGit/app/src/main/res/layout/image_with_tipsss.xml -->